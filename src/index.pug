doctype html
html(lang="en")
    head
        include layout/_head
    body 
        include layout/_header
        main
            section.main-slider#mainSlider
                .swiper.main-slider__container
                    .swiper-wrapper 
                        each slide, i in slides
                            .swiper-slide.main-slider__slide
                                h2=slide.title   
                                a.more=slide.button
                    .swiper-pagination.main-slider__pag
                    .swiper-button-prev.main-slider__prev.button
                    .swiper-button-next.main-slider__next.button
                .main-slider__bottom
                    a(href="#productSlider" class="blue-button")
                        img(src="assets/img/blue-arrow-down.png", alt="")

            section.products-slider.standart-slider.container#productSlider
                .standart-slider__top
                    h3 Products
                    a(href="#") View All
                .standart-slider__bottom
                    .standart-slider__container.swiper.products-slider__swiper
                        .swiper-wrapper
                            each product, i in products
                                .swiper-slide.products-slider__slide
                                    .green-new New
                                    .slider-img 
                                        img(src=product.image, alt="")
                                    .slider-text 
                                        h4=product.title
                                        p=product.title
                                        div 
                                            span BRAND:
                                            span= " " + product.brand
                                        div 
                                            span MODEL:
                                            span= " " + product.model
                                        div 
                                            span EAN/UPC:
                                            span= " " + product.ean
                                        .slider-text__checkbox 
                                            input(type="checkbox", name="")
                                            label Compares
                                    .slider-bottom 
                                        .slider-bottom__info
                                            .price 
                                                    p price:  
                                                    span= `${product.price}$`
                                            .addto-cart 
                                                span Add to cart
                                                img(src="assets/img/basket.svg", alt="")
                                        .slider-bottom__button
                                            .quick-view Quick View
                    .swiper-button-prev.main-slider__prev.button.products-slider__prev
                    .swiper-button-next.main-slider__next.button.products-slider__next
            section.standart-slider.container.solution-slider
                .standart-slider__top
                    h3 Solutions
                    a(href="#") View All
                .standart-slider__bottom
                    .standart-slider__container.swiper.solution-slider__container
                        .swiper-wrapper
                            each solution, i in solutions
                                .swiper-slide.solution-slider__slide
                                    .solution-slider__img 
                                        img(src=solution.image, alt="")
                                    .solution-slider__text 
                                        p=solution.title 


                            
                    .swiper-button-prev.main-slider__prev.button.solution-slider__prev
                    .swiper-button-next.main-slider__next.button.solution-slider__next 
            section.standart-slider.partners-slider
                    .standart-slider__top.container
                        h3 Our partners
                    .standart-slider__bottom.container
                        .swiper.partners-slider__container
                            .swiper-wrapper
                                each partner, i in partners
                                    .swiper-slide.partners-slider__slide
                                        img(src=partner.image, alt="")
                    .swiper-pagination.partners-slider__pag
            section.become-partner.container
                .become-partner__wrapper
                    a(href="")  Become our partner

            include layout/_consultation
        include layout/_footer
        script(src='assets/js/swiper-bundle.min.js')
        script(src='assets/js/main.js')
